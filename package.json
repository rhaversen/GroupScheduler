        "@types/express-session": "^1.17.7",
        "@types/mocha": "^10.0.1",
        "@types/node": "^20.5.0",
        "@types/nodemailer": "^6.4.9",
        "@types/passport": "^1.0.12",
        "@types/passport-local": "^1.0.35",
        "@types/validator": "^13.11.1",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "chai": "^4.3.7",
        "chai-http": "^4.4.0",
        "cookie": "^0.5.0",
        "cross-env": "^7.0.3",
