        "express": "^4.18.2",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^7.1.0",
        "express-session": "^1.17.3",
        "helmet": "^7.0.0",
        "mongodb": "^5.9.0",
        "mongoose": "^7.6.2",
        "nanoid": "^4.0.2",
        "node-vault": "^0.10.2",
        "nodemailer": "^6.9.4",
        "passport": "^0.6.0",
        "passport-local": "^1.0.0",
        "validator": "^13.9.0",
        "winston": "^3.9.0"
