        "mocha": "^10.2.0",
        "mongodb-memory-server": "^9.0.0",
        "nyc": "^15.1.0",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.2.2"
