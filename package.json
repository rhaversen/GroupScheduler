{
    "name": "backend",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "devdev": "ts-node-dev src/index.ts",
        "dev": "ts-node --loader tsconfig.json src/index.ts",
        "start-dev": "node --env-file=.env dist/src/index.js",
        "start": "node dist/src/index.js",
        "build-start": "npm run build && npm run start",
        "build-start-dev": "npm run build && npm run start-dev",
        "test": "cross-env NODE_ENV=test MOCHA_REPORTER_OPTIONS=toConsole=true mocha --reporter spec --recursive dist/test/**/*.spec.js",
        "build": "tsc",
        "build-test": "npm run build && npm run test",
        "lint": "npx eslint **/*.ts",
        "lint:fix": "npx eslint **/*.ts --fix",
        "depcheck": "npx depcheck",
        "upgrade-all": "npm update && npx ncu -u && npm install"
    },
    "dependencies": {
        "@logtail/node": "^0.4.19",
        "axios": "^1.6.7",
        "bcrypt": "^5.1.1",
        "config": "^3.3.10",
        "connect-mongo": "^5.1.0",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^7.1.5",
        "express-session": "^1.18.0",
        "helmet": "^7.1.0",
        "lusca": "^1.7.0",
        "mongoose": "^8.1.1",
        "nanoid": "^5.0.4",
        "node-vault": "^0.10.2",
        "nodemailer": "^6.9.9",
        "passport": "^0.7.0",
        "passport-local": "^1.0.0",
        "validator": "^13.11.0",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/config": "^3.3.3",
        "@types/cookie": "^0.6.0",
        "@types/cookie-parser": "^1.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-session": "^1.17.10",
        "@types/lusca": "^1.7.4",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.11.13",
        "@types/nodemailer": "^6.4.14",
        "@types/passport": "^1.0.16",
        "@types/passport-local": "^1.0.38",
        "@types/request": "^2.48.12",
        "@types/validator": "^13.11.8",
        "@typescript-eslint/eslint-plugin": "^6.20.0",
        "@typescript-eslint/parser": "^6.20.0",
        "chai": "^5.0.3",
        "chai-http": "^4.4.0",
        "cookie": "^0.6.0",
        "cross-env": "^7.0.3",
        "depcheck": "^1.4.7",
        "eslint": "^8.56.0",
        "eslint-config-standard-with-typescript": "^43.0.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-promise": "^6.1.1",
        "mocha": "^10.2.0",
        "mongodb-memory-server": "^9.1.6",
        "npm-check-updates": "^16.14.14",
        "nyc": "^15.1.0",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    },
    "ts-node-dev": {}
}
